<!-- views/users/tvshows.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %>'s TV Shows</title>
</head>
<body>
<%- include('../partials/header') %>
<%- include('../partials/nav') %>
  <header>
    <h1><%= user.username %>'s BINDER</h1>
  </header>
  <nav>
    <ul>
      <li><a href="/users/binder/<%= user._id %>">All Media</a></li>
      <li><a href="/users/tvshows/<%= user._id %>"><strong>TV Shows</strong></a></li>
      <li><a href="/users/movies/<%= user._id %>">Movies</a></li>
    </ul>
  </nav>
  <main>
    <h2>TV Shows</h2>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Score</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if (tvshows.length > 0) { %>
          <% tvshows.forEach((tvshow, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><a href="/users/show/<%= tvshow._id %>"><%= tvshow.title %></a></td>
              <td><%= tvshow.score %></td>
              <td><%= tvshow.status %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No TV Shows found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>