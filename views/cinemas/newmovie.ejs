<!-- cinemas/newmovie.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Movies</title>
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/pages/new.css">
</head>
<body>
<%- include('../partials/nav') %>
  <div class="container">
    <h1>Add Movies</h1>
    <p>Use this form to add a new movie to your collection</p>
    <form action="/cinemas/newmovie" method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" list="titles" required />
      <datalist id="titles"></datalist>
      
      <label for="score">Score</label>
      <select name="score" id="score" required>
        <option value="">Value</option>
        <% for (let i = 1; i <= 10; i++) { %>
          <option value="<%= i %>"><%= i %></option>
        <% } %>
      </select>
      
      <label for="status">Status</label>
      <select name="status" id="status" required>
        <option value="">Value</option>
        <option value="Completed">Completed</option>
        <option value="Haven't Completed">Haven't Completed</option>
        <option value="Plan to Watch">Plan to Watch</option>
      </select>
      
      <label for="notes">Notes (Optional)</label>
      <textarea name="notes" id="notes"></textarea>
      
      <button type="submit">Save movie information</button>
    </form>
  </div>
  <script src="/js/cinemas.js"></script>
</body>
</html>